@using ContactApp.Models
@model IEnumerable<ContactApp.Models.ContactMessage>

@{
    ViewData["Title"] = "Kayıtlar";
}

<h2>İletişim Formu Kayıtları</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı Soyadı</th>
            <th>Telefon</th>
            <th>E-Posta</th>
            <th>Departman</th>
            <th>Mesaj</th>
            <th>Tarih</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    @{
                        // Enum değerlerini ekranda Türkçe göstermek için switch kullanalım
                        var deptTurkish = item.Department switch
                        {
                            Department.Accounting => "Muhasebe",
                            Department.TechnicalSupport => "Teknik Destek",
                            Department.HumanResources => "İnsan Kaynakları",
                            _ => item.Department.ToString()
                        };
                    }
                    @deptTurkish
                </td>
                <td style="max-width:400px; white-space:pre-wrap;">@item.Message</td>
                <td>@item.SubmittedAt.ToLocalTime().ToString("g")</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Kaydı silmek istediğinizden emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
